<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_img"
    tools:context=".Unenroll_Page">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/unEnrol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="70dp"
                android:gravity="center"
                android:text="Unenroll Kid"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/unEnrol_childId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/unenrol"
                android:layout_margin="1dp"
                android:hint="ID: 123456"
                android:padding="20dp"
                android:inputType="number"
                android:maxLength="7"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/unEnrol_guardianMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/unEnrol_childId"
                android:layout_margin="1dp"
                android:hint="Guardian number: +971561239788"
                android:padding="20dp"
                android:textColor="@color/black"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/unEnrolButton"
                android:layout_below="@+id/unEnrol_guardianMobileNumber"
                android:text="UN-ENROL"
                android:backgroundTint="@color/mainColor"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                />


        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/container_bottom_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>