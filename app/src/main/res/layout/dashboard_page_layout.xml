<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard_Page"
    android:background="@drawable/background_img"
    >
    <androidx.core.widget.NestedScrollView
        android:id="@+id/dashboardScroll"
        android:paddingBottom="0sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="80sp"
            android:paddingBottom="80sp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32sp"
                android:layout_margin="20sp"
                android:layout_marginLeft="20sp"
                >

                <TextView
                    android:text="Dashboard"
                    android:id="@+id/dashboardText"
                    android:textColor="@color/white"
                    android:textSize="27sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:text="5 items"
                    android:layout_below="@id/dashboardText"
                    android:textColor="#F0E3FF"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <ImageView
                    android:layout_width="62sp"
                    android:layout_height="62sp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/accountdash" />
            </RelativeLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:stretchMode="none"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6sp"
                    app:cardCornerRadius="12sp"
                    android:layout_margin="12sp"
                    >

                    <LinearLayout
                        android:gravity="center"
                        android:padding="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NUMBER OF KIDS"
                            android:textSize="15sp"
                            android:textColor="@color/mainColor"
                            />



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_marginTop="10sp"
                                android:layout_marginRight="6sp"
                                android:layout_width="65sp"
                                android:layout_height="65sp"
                                android:src="@drawable/kiddashboard"
                                />

                            <TextView
                                android:id="@+id/numKids"
                                android:text="58"
                                android:textSize="65sp"
                                android:textColor="@color/mainColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6sp"
                    app:cardCornerRadius="12sp"
                    android:layout_margin="12sp"
                    >

                    <LinearLayout
                        android:gravity="center"
                        android:padding="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NUMBER OF STAFF"
                            android:textSize="15sp"
                            android:textColor="@color/mainColor"
                            />



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_marginTop="14sp"
                                android:layout_marginRight="6sp"
                                android:layout_width="58sp"
                                android:layout_height="58sp"
                                android:src="@drawable/user"
                                />

                            <TextView
                                android:id="@+id/numStaff"
                                android:text="21"
                                android:textSize="65sp"
                                android:textColor="@color/mainColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="6sp"
                app:cardCornerRadius="12sp"
                android:layout_margin="12sp"
                >

                <LinearLayout
                    android:gravity="center"
                    android:padding="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INCOME  VS  EXPENSES"
                        android:textSize="15sp"
                        android:textColor="@color/mainColor"
                        />

                    <ImageView
                        android:layout_marginTop="10sp"
                        android:layout_width="300sp"
                        android:layout_height="300sp"
                        android:src="@drawable/graph"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:stretchMode="none"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6sp"
                    app:cardCornerRadius="12sp"
                    android:layout_margin="12sp"
                    >

                    <LinearLayout
                        android:gravity="center"
                        android:padding="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="INCOME"
                            android:textSize="15sp"
                            android:textColor="@color/mainColor"
                            />



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/incomeDashboard"
                                android:text="1500"
                                android:textSize="41sp"
                                android:textColor="#a3ffa8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />

                        </LinearLayout>

                        <TextView

                            android:text="AED"
                            android:textSize="25sp"
                            android:textColor="@color/mainColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6sp"
                    app:cardCornerRadius="12sp"
                    android:layout_margin="12sp"
                    >

                    <LinearLayout
                        android:gravity="center"
                        android:padding="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EXPENSES"
                            android:textSize="15sp"
                            android:textColor="@color/mainColor"
                            />



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/expenditureDashboard"
                                android:text="1700"
                                android:textSize="41sp"
                                android:textColor="#ffc98f"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />

                        </LinearLayout>

                        <TextView

                            android:text="AED"
                            android:textSize="25sp"
                            android:textColor="@color/mainColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>




            </GridLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/container_bottom_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>