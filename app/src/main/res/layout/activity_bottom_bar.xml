<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mainColor"
    android:paddingVertical="7sp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/Dashboard_Image"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/dashboard" />

        <ImageView
            android:id="@+id/Kids_Image"
            android:layout_width="41sp"
            android:layout_height="41sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60sp"
            android:src="@drawable/kids" />


        <ImageView
            android:id="@+id/Statements_Image"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60sp"
            android:src="@drawable/statment" />


        <ImageView
            android:id="@+id/Account_Image"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginLeft="60sp"
            android:src="@drawable/account" />

    </LinearLayout>

</RelativeLayout>